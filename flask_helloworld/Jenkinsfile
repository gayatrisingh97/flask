pipeline{
    agent any
    stages{
        stage ("Build") {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        stage ("Test") {
            steps {
                sh 'python3 -m pytest'
            }
        }
        stage ("Deploy") {
            steps {
                sh 'python3 "app.py"'
            }
        }
    }
}






